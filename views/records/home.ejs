<% include ../partials/header %>

<h3>All Records</h3>

<% for (var i = 0; i < record.length; i++){ %>
  <div>
  <%=record.tracks%>
  <br/>
  <img src='<%=record[i].photo%>' alt='Individual Record Photo' />
  <br/>
  Last Price: <%=record.lastPrice%>
  <br/>
  <button class='details' data-id='<%=record[i]._id%>'>More Info</button>
  <% if (record[i].available === true && record[i].forSale === true) { %>
    <button class='buyButton'>Buy</button>
  <% } %>
  <br/>
  <br/>
    <div>
    <% if(record[i].owner === locals.user) { %>
      Admin Functions:
      <br/>
      <br/>
      <button class='details' data-id='<%=record[i]._id%>'>Edit</button>
      <button class='list'>List It</button>
      <% include ../partials/availableAndSaleForm %>
    <% } %>
    </div>
  </div>
<% } %>


<% include ../partials/footer %>